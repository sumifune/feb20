extends layout

block content
  .row
    form(method='post', action='', novalidate='novalidate', autocomplete='off')
      .form-group
        label(for='password') New password
        input#newPass.form-control(type='password', name='newPass', placeholder='New password', autofocus)
      .form-group
        label(for='confirmPass') Confirm password
        input#confirmPass.form-control(type='password', name='confirmPass', placeholder='Confirm password', autofocus)
      br
      button.btn.btn-primary(type='submit') Reset password